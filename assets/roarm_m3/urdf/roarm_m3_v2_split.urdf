<?xml version="1.0"?>
<!--
  RoArm M3 URDF - Split STL 버전
  
  특징:
  - roarm_m3_complete.stl을 반경 기반으로 분할한 STL 사용
  - 각 링크는 절대 좌표로 배치되어 있음
  - visual origin은 [0,0,0]으로 설정 (절대 좌표 유지)
  - Joint origin은 원본 URDF와 동일 (링크 간 관계 유지)
-->
<robot name="roarm_m3">

  <!-- Materials -->
  <material name="black"><color rgba="0.1 0.1 0.1 1.0"/></material>
  <material name="gray"><color rgba="0.5 0.5 0.5 1.0"/></material>
  <material name="silver"><color rgba="0.75 0.75 0.75 1.0"/></material>

  <!-- World -->
  <link name="world"/>
  
  <joint name="world_to_base" type="fixed">
    <parent link="world"/>
    <child link="base_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <!-- Base Link -->
  <link name="base_link">
    <inertial>
      <mass value="0.5"/>
      <origin xyz="0 0 0.03" rpy="0 0 0"/>
      <inertia ixx="0.001" iyy="0.001" izz="0.001" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="/home/roarm_m3/roarm_isaac_clean/assets/roarm_m3/meshes/visual/base_link.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="gray"/>
    </visual>
    <collision>
      <origin xyz="0 0 0.03" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.04" length="0.06"/>
      </geometry>
    </collision>
  </link>

  <!-- Joint 1: Base Rotation -->
  <joint name="joint_1" type="revolute">
    <parent link="base_link"/>
    <child link="link_1"/>
    <origin xyz="0 0 0.060" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14159" upper="3.14159" effort="10" velocity="2.0"/>
    <dynamics damping="0.5" friction="0.3"/>
  </joint>

  <!-- Link 1 -->
  <link name="link_1">
    <inertial>
      <mass value="0.3"/>
      <origin xyz="0 0 0.04" rpy="0 0 0"/>
      <inertia ixx="0.0005" iyy="0.0005" izz="0.0003" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="/home/roarm_m3/roarm_isaac_clean/assets/roarm_m3/meshes/visual/link_1.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin xyz="0 0 0.04" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.035" length="0.08"/>
      </geometry>
    </collision>
  </link>

  <!-- Joint 2: Shoulder -->
  <joint name="joint_2" type="revolute">
    <parent link="link_1"/>
    <child link="link_2"/>
    <origin xyz="0 0 0.080" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="15" velocity="1.5"/>
    <dynamics damping="0.7" friction="0.4"/>
  </joint>

  <!-- Link 2 -->
  <link name="link_2">
    <inertial>
      <mass value="0.25"/>
      <origin xyz="0.08 0 0" rpy="0 0 0"/>
      <inertia ixx="0.0003" iyy="0.0015" izz="0.0015" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="/home/roarm_m3/roarm_isaac_clean/assets/roarm_m3/meshes/visual/link_2.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="silver"/>
    </visual>
    <collision>
      <origin xyz="0.08 0 0" rpy="0 1.57 0"/>
      <geometry>
        <cylinder radius="0.025" length="0.16"/>
      </geometry>
    </collision>
  </link>

  <!-- Joint 3: Elbow -->
  <joint name="joint_3" type="revolute">
    <parent link="link_2"/>
    <child link="link_3"/>
    <origin xyz="0.160 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="10" velocity="2.0"/>
    <dynamics damping="0.5" friction="0.3"/>
  </joint>

  <!-- Link 3 -->
  <link name="link_3">
    <inertial>
      <mass value="0.2"/>
      <origin xyz="0.075 0 0" rpy="0 0 0"/>
      <inertia ixx="0.0002" iyy="0.0008" izz="0.0008" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="/home/roarm_m3/roarm_isaac_clean/assets/roarm_m3/meshes/visual/link_3.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin xyz="0.075 0 0" rpy="0 1.57 0"/>
      <geometry>
        <cylinder radius="0.02" length="0.15"/>
      </geometry>
    </collision>
  </link>

  <!-- Joint 4: Wrist 1 -->
  <joint name="joint_4" type="revolute">
    <parent link="link_3"/>
    <child link="link_4"/>
    <origin xyz="0.150 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="5" velocity="2.5"/>
    <dynamics damping="0.3" friction="0.2"/>
  </joint>

  <!-- Link 4 -->
  <link name="link_4">
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0.03 0 0" rpy="0 0 0"/>
      <inertia ixx="0.0001" iyy="0.0002" izz="0.0002" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="/home/roarm_m3/roarm_isaac_clean/assets/roarm_m3/meshes/visual/link_4.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="gray"/>
    </visual>
    <collision>
      <origin xyz="0.03 0 0" rpy="0 1.57 0"/>
      <geometry>
        <cylinder radius="0.015" length="0.06"/>
      </geometry>
    </collision>
  </link>

  <!-- Joint 5: Wrist 2 -->
  <joint name="joint_5" type="revolute">
    <parent link="link_4"/>
    <child link="link_5"/>
    <origin xyz="0.060 0 0" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="-3.14159" upper="3.14159" effort="3" velocity="3.0"/>
    <dynamics damping="0.2" friction="0.1"/>
  </joint>

  <!-- Link 5 -->
  <link name="link_5">
    <inertial>
      <mass value="0.05"/>
      <origin xyz="0.02 0 0" rpy="0 0 0"/>
      <inertia ixx="0.00005" iyy="0.00008" izz="0.00008" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="/home/roarm_m3/roarm_isaac_clean/assets/roarm_m3/meshes/visual/link_5.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin xyz="0.02 0 0" rpy="0 1.57 0"/>
      <geometry>
        <cylinder radius="0.012" length="0.04"/>
      </geometry>
    </collision>
  </link>

  <!-- Joint 6: Gripper Base -->
  <joint name="joint_6" type="fixed">
    <parent link="link_5"/>
    <child link="gripper_base"/>
    <origin xyz="0.040 0 0" rpy="0 0 0"/>
  </joint>

  <!-- Gripper Base -->
  <link name="gripper_base">
    <inertial>
      <mass value="0.08"/>
      <origin xyz="0.01 0 0.01" rpy="0 0 0"/>
      <inertia ixx="0.00008" iyy="0.00008" izz="0.00005" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="/home/roarm_m3/roarm_isaac_clean/assets/roarm_m3/meshes/visual/gripper_base.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="silver"/>
    </visual>
    <collision>
      <origin xyz="0.01 0 0.01" rpy="0 0 0"/>
      <geometry>
        <box size="0.03 0.04 0.02"/>
      </geometry>
    </collision>
  </link>

  <!-- Gripper Left Finger Joint -->
  <joint name="gripper_left_finger_joint" type="revolute">
    <parent link="gripper_base"/>
    <child link="gripper_left_finger"/>
    <origin xyz="0 0.015 0.040" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="1.08" upper="3.14" effort="2" velocity="1.0"/>
    <dynamics damping="0.1" friction="0.05"/>
  </joint>

  <!-- Gripper Left Finger -->
  <link name="gripper_left_finger">
    <inertial>
      <mass value="0.02"/>
      <origin xyz="0.015 0 0" rpy="0 0 0"/>
      <inertia ixx="0.00001" iyy="0.00001" izz="0.000005" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="/home/roarm_m3/roarm_isaac_clean/assets/roarm_m3/meshes/visual/gripper_left_finger.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="gray"/>
    </visual>
    <collision>
      <origin xyz="0.015 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.03 0.005 0.01"/>
      </geometry>
    </collision>
  </link>

  <!-- Gripper Right Finger Joint -->
  <joint name="gripper_right_finger_joint" type="revolute">
    <parent link="gripper_base"/>
    <child link="gripper_right_finger"/>
    <origin xyz="0 -0.015 0.040" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="1.08" upper="3.14" effort="2" velocity="1.0"/>
    <dynamics damping="0.1" friction="0.05"/>
    <mimic joint="gripper_left_finger_joint" multiplier="1" offset="0"/>
  </joint>

  <!-- Gripper Right Finger -->
  <link name="gripper_right_finger">
    <inertial>
      <mass value="0.02"/>
      <origin xyz="0.015 0 0" rpy="0 0 0"/>
      <inertia ixx="0.00001" iyy="0.00001" izz="0.000005" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="/home/roarm_m3/roarm_isaac_clean/assets/roarm_m3/meshes/visual/gripper_right_finger.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="gray"/>
    </visual>
    <collision>
      <origin xyz="0.015 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.03 0.005 0.01"/>
      </geometry>
    </collision>
  </link>

  <!-- TCP (Tool Center Point) -->
  <joint name="gripper_to_tcp" type="fixed">
    <parent link="gripper_base"/>
    <child link="tcp"/>
    <origin xyz="0.05 0 0.040" rpy="0 0 0"/>
  </joint>

  <link name="tcp"/>

</robot>
